<?xml version="1.0"?>
<object name="portal_controlpanel"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="collective.weather"
   purge="False">
 <configlet title="Weather"
    action_id="WeatherSettings"
    appId="collective.weather"
    category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@weather-controlpanel"
    icon_expr="string:$portal_url/++resource++collective.weather.icons/weather.png"
    visible="True"
    i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>
</object>